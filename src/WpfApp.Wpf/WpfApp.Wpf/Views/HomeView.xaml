<UserControl x:Class="WpfApp.Wpf.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.Wpf.Views"
             xmlns:cmd="clr-namespace:WpfApp.Wpf.Helpers.Commands"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             xmlns:ui="http://schemas.modernwpf.com/2019"
             d:DesignHeight="450" d:DesignWidth="800">
    <ui:ScrollViewerEx>

        <StackPanel>
            <ui:ThemeShadowChrome Depth="5">
                <TextBlock Text="Witaj! oto lista twoich Atomi Habitów" Background="White"/>
            </ui:ThemeShadowChrome>
            
            <ListView x:Name="HabitsListView" ItemsSource="{Binding AtimicHabitsCollection}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <!--IsReadOnlyCaretVisible="False" Focusable="False"-->
                            <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="{Binding IsTextBlockReadOnly, UpdateSourceTrigger=PropertyChanged}"
                                     />


                      
                            <Expander Grid.Row="2" Header="Details">
                                <Border  BorderBrush="Black" BorderThickness="1" CornerRadius="5" Padding="5">
                                    <TextBox TextWrapping="Wrap" BorderThickness="0"
                                           Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                           IsReadOnly="{Binding IsTextBlockReadOnly, UpdateSourceTrigger=PropertyChanged}"/>
                                </Border>
                            </Expander>


                            <TextBlock Text="Status" Grid.Column="1"/>
                            <CheckBox  IsChecked="{Binding IsHabitDone, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="Streak" Grid.Column="2"/>
                            <TextBlock Text="{Binding Streak, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                            <ui:CommandBar Height="40"
                                       Grid.Column="3" Grid.RowSpan="3"
                                       VerticalAlignment="Center">

                                <ui:AppBarButton Icon="Delete" Label="Delete" 
                                                 Command="{Binding DataContext.HabitDelateCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                 CommandParameter="{Binding}"/>
                                
           


                                <ui:AppBarToggleButton Icon="Edit" Label="Edit"
                                                       IsChecked="{Binding IsEditHabitModeOn,UpdateSourceTrigger=PropertyChanged}"
                                                       Command="{Binding DataContext.HabitEditCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                       CommandParameter="{Binding}"/>



                            </ui:CommandBar>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ListView>
            <Expander Header="Create new habbit">
                <StackPanel>
                    <TextBlock Grid.Column="0" Grid.Row="0" Text="Title"/>
                    <TextBox Text="{Binding HabitTitle, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Grid.Column="0" Grid.Row="0" Text="Description"/>
                    <TextBox Text="{Binding HabitDescription, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button Content="Add" Command="{Binding AddHabitCommand}"/>
                </StackPanel>
            </Expander>



        </StackPanel>
    </ui:ScrollViewerEx>
    
</UserControl>
