<Window x:Class="WpfApp.Wpf.Views.ToastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.Wpf.Views"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="300" Height="100"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize">
    <Border Background="#FF333333" CornerRadius="8" Padding="10">
        <StackPanel>
            <TextBlock x:Name="TitleText" FontWeight="Bold" Foreground="White" FontSize="16" Margin="0 0 0 10"/>
            <TextBlock x:Name="MessageText" Foreground="White" TextWrapping="Wrap"/>
        </StackPanel>
    </Border>
</Window>
